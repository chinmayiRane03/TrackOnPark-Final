<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/car_pic"
            android:tag="image_tag"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/bmc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:text="Address"
            android:textSize="15sp"
            android:textColor="#AB000000"

            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:layout_toEndOf="@+id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/days"
            android:textSize="15sp"
            android:text="Date"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:textColor="#48000000"
            android:textStyle="italic"
            android:drawablePadding="10dp"
            android:layout_toEndOf="@+id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/carType"
            android:drawableLeft="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploader"
            android:textSize="15sp"
            android:text="Uploader"
            android:textColor="#B0000107"
            android:layout_toEndOf="@+id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:layout_below="@+id/address"
            android:drawableLeft="@drawable/ic_person_black_24dp" />
        <ImageView
            android:id="@+id/navigate_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_near_me_black_24dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carType"
            android:textSize="15sp"
            android:text="carType"
            android:textColor="#AD000000"
            android:layout_toEndOf="@id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_warning_black_24dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:layout_below="@+id/uploader"
            android:drawableLeft="@drawable/ic_person_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accuracy"
            android:textSize="15sp"
            android:text="accuracy"
            android:textColor="#AD000000"
            android:layout_toEndOf="@+id/carType"
            android:layout_toRightOf="@+id/carType"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:layout_below="@+id/uploader"
            android:paddingLeft="20dp" />




    </RelativeLayout>



</androidx.cardview.widget.CardView>

